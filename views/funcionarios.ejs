<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro de Funcionário</title>
    <link rel="stylesheet" href="funcionarios.css">
<%-include('partials/header')%>
</head>
<body>
    <%-include('partials/barra')%>
    <div class="form-container">
        <h2>Cadastro de Funcionário</h2>
        <form>
            <!-- Nome Completo -->
            <div class="form-group">
                <label for="nome">Nome Completo</label>
                <input type="text" id="nome" class="form-control" placeholder="Digite o nome completo" required>
            </div>

            <!-- CPF -->
            <div class="form-group">
                <label for="cpf">CPF</label>
                <input type="text" id="cpf" class="form-control" placeholder="Digite o CPF" required>
            </div>

            <!-- E-mail -->
            <div class="form-group">
                <label for="email">E-mail</label>
                <input type="email" id="email" class="form-control" placeholder="Digite o e-mail" required>
            </div>

            <!-- Telefone -->
            <div class="form-group">
                <label for="telefone">Telefone</label>
                <input type="tel" id="telefone" class="form-control" placeholder="Digite o telefone" required>
            </div>

            <!-- Endereço -->
            <div class="form-group">
                <label for="endereco">Endereço</label>
                <input type="text" id="endereco" class="form-control" placeholder="Digite o endereço" required>
            </div>

            <!-- Cargo -->
            <div class="form-group">
                <label for="cargo">Cargo</label>
                <input type="text" id="cargo" class="form-control" placeholder="Digite o cargo" required>
            </div>


            <!-- Botão de Cadastro -->
            <button type="submit" class="btn-submit">Cadastrar</button>

            <!-- Link para login -->
            <p class="login-redirect">Já possui uma conta? <a href="#">Acesse sua conta</a></p>
        </form>
    </div>

</body>
</html>
